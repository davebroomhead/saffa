<!DOCTYPE html>
<html>
  <head>
    <title>SAFFA</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= cloudinary_js_config %>
  </head>

  <body>

  <header>
    
    <nav>
      
      <% if @current_user.present? %>
        <div class="nav_left">
          <div><%= link_to 'Dams', dams_path %></div>
          <div><%= link_to 'Users', users_path %></div>
          <div><%= link_to 'Bookings', bookings_path %></div>
        </div>

        <div class="nav_right">
          <div><%= @current_user.name %> (<%= @current_user.admin ? "admin" : "basic user" %>) | <%= link_to 'Logout', login_path, method: 'delete' %></div>
        </div>
      
      <% else %>
        <div><%= link_to 'Login', login_path %></div>
        <div><%= link_to 'Sign Up', '/does-not-exist-yet' %></div>

      <% end %>
  
    </nav>
  </header>

  <h1>Dam Booking System</h1>

    <%= yield %>

    <footer>
      <hr>
      &copy; SAFFA 2022
    </footer>
  </body>
</html>

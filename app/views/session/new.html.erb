
<div class="login-container">

    <% if flash[:error] %>
        <br>
            <strong>
                <%= flash[:error] %>
            </strong>
    <% end %>

    <%= form_with url: login_path, local: true do |f| %>

    <%= f.label :email%>
    <br>
    <%= f.text_field :email, :class => "login-field"  %>
    <br><br>

    <%= f.label :password %>
    <br>
    <%= f.password_field :password, :class => "login-field"  %>
    <br><br>

    <%= f.submit 'Log In', :class => "primary-button", :id => "login-button" %>

</div>

<% end %>

